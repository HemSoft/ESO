<body ng-app="app">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ESO Portal", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Dailies", "Dailies", "Home")</li>
                    <li>@Html.ActionLink("Inventory", "Inventory", "Home")</li>
                    <li>@Html.ActionLink("Quests", "Quests", "Home")</li>
                    <li>@Html.ActionLink("Research", "Research", "Home")</li>
                    <li>@Html.ActionLink("Skills", "Skills", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    <li></li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row">
            <div class="col-md-12 panel panel-default">
                <div class="panel-body text-center" id="countdown" ng-controller="esoController as vmeso" ng-Init="vmeso.CountDown()"></div>
            </div>
        </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - by HemSoft Developments</p>
        </footer>
